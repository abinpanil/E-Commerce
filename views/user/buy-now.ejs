<script>

    function useWallet(walletPrice) {

        let totalPrice = $('#total_price').html().trim()
        console.log(walletPrice);
        event.preventDefault()
        $('#totalPrice').val(totalPrice - walletPrice)
        $('#total_price').html(totalPrice - walletPrice)
        $('#wallet_price').html('0')
        $('#wallet_status').val('true')
        $('#wallet_btn').attr('disabled', 'disabled');

    }

    function addressNull() {

        event.preventDefault()

        Swal.fire({
            icon: 'error',
            title: 'Oops...',
            text: 'Select Address!'
        })
    }

    function applyCoupon() {
        event.preventDefault()
        let productPrice = $('#total_price').html().trim()
        let coupon = $('#coupon_inp').val()
        $('#coupon_error').html('')
        let couponErr = true
        if (coupon.length == '') {
            $('#coupon_inp').css('border-color', '#c70d0d')
            $('#coupon_inp').attr("placeholder", "Enter Coupon")
            couponErr = false
        }
        if (couponErr === true) {
            console.log(coupon);
            $.ajax({
                url: '/apply-coupon',
                method: 'post',
                data: {
                    coupon: coupon,
                    price: productPrice
                },
                success: (response) => {
                    console.log("ethy");
                    console.log(response.coupon);
                    if (response.coupon) {

                        if (response.err === 1) {
                            $('#coupon_error').html('Already this coupon used')
                        } else if (response.coupon.min_amount > productPrice) {
                            $('#coupon_error').html(`This coupon is only applicable for purchase more than Rs.` + response.coupon.min_amount)
                        } else {

                            $('#coupon_div').html(
                                `
                                <div id="coupon_div" class="pt-4 text-center">
                                    <h4 class="pt-5 pb-5" style="border: 1px solid green; color: green;">Coupon Applied</h4>
                                </div>
                                `
                            )
                            $('#coupon_status').val('true')
                            let priceAfterDiscount = productPrice * response.coupon.discount / 100
                            $('#discount_count').html(
                                `
                                <th>Coupon Discount</th>
                                <td>${priceAfterDiscount}</td>
                                `
                            )
                            $('#coupon_code').val(response.coupon.code)
                            $('#discount').val(priceAfterDiscount)
                            $('#total_change').html(
                                `
                                <th><b>Total</b></th>
                                <td><b>RS.<span>${productPrice - priceAfterDiscount}</span></b></td>
                                `
                            )
                            $('#totalPrice').val(productPrice - priceAfterDiscount)
                        }

                    } else {
                        $('#coupon_error').html('Coupon is not valid')
                    }
                }
            })
        }
    }

