            let regnum = new RegExp("^[0-9]+$");

            let mobileValue = $('#mobile').val();

            if (mobileValue.length == '') {

                $('#mobile').css('border-color', '#c70d0d')
                $('#mobile').attr("placeholder", "Enter Number")

