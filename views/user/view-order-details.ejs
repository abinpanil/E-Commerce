<!-- Start of Main -->
<main class="main checkout">
    <!-- Start of Breadcrumb -->
    <nav class="breadcrumb-nav">
        <div class="container">
            <ul class="breadcrumb shop-breadcrumb bb-no">
                <li class="passed"><a href="/myaccount">My Account</a></li>
                <li class="active"><a href="/myaccount">Orders</a></li>
                <li><a href="javascript: void(0)">Order Details</a></li>
            </ul>
        </div>
    </nav>
    <!-- End of Breadcrumb -->


    <!-- Start of PageContent -->
    <div class="page-content">
        <div class="container">
            <div class="row mb-9">
                <div class="col-lg-7 pr-lg-4 mb-4">
                    <h3 class="title billing-title text-uppercase ls-10 pt-1 pb-3 mb-0">
                        Order Details
                    </h3>

                    <div class="row gutter-sm">
                        <%for(i=0;i<orderDetail.length;i++){%>
                            <div class="row align-items-center pt-4 pb-4">
                                
                                    <div class="col-xs-3">
                                        <a href="/viewproduct/<%=orderDetail[i].product._id%>">
                                        <img style="width: 115px;"
                                            src="/user/images/productImage/<%=orderDetail[i].product._id%>1.jpg" alt="">
                                        </a>
                                    </div>
                                    <div class="col-xs-9">
                                        <h5>
                                            <%=orderDetail[i].product.productname%>
                                        </h5>
                                        <h5>Price:<span> Rs.<%=orderDetail[i].product.productprice%></span></h5>
                                        <h5>Quantity:<span>
                                                <%=orderDetail[i].quantity%>
                                            </span></h5>
                                    </div>
                                
                            </div>
                            <hr>
                            <%}%>
                    </div>



                </div>
                <div class="col-lg-5 mb-4 sticky-sidebar-wrapper">
                    <div class="order-summary-wrapper sticky-sidebar">
                        <h3 class="title text-uppercase ls-10">Shipping Address</h3>
                        <div class="order-summary">
                            <div class="col5 order_address">
                                <p><b>
                                        <%=orderDetail[1].deliveryDetails.name%>
                                    </b></p>
                                <p>
                                    <%=orderDetail[1].deliveryDetails.address%>
                                </p>
                                <p>
                                    <%=orderDetail[1].deliveryDetails.town%>
                                </p>
                                <p>
                                    <%=orderDetail[1].deliveryDetails.state%>
                                </p>
                                <p>
                                    <%=orderDetail[1].deliveryDetails.zip%>
                                </p>
                                <p>
                                    <%=orderDetail[1].deliveryDetails.mobile%>
                                </p>
                            </div>
                        </div>
                        <h5></h5>
                        <div class="order-summary pb-5">
                            <div class="col5 order_address">
                                <p>Shipping Charge :<b> Free</b></p>
                                <p>Status :<b>
                                        <%=orderDetail[1].status%>
                                    </b></p>

                            </div>
                        </div>
                        <h3 class="title ls-10">Total Price : <span>
                                <%=orderDetail[1].totalPrice%>
                            </span></h3>
                        <div class="col-3 pt-5">
                            <button class="btn btn-secondary btn-outline btn-rounded" onclick="cancelOrder('<%=orderDetail[1]._id%>')">Cancel Order</button>
                        </div>
                    </div>
                </div>
            </div>
            </form>
        </div>
    </div>
    <!-- End of PageContent -->
</main>
<!-- End of Main -->



