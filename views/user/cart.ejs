<!-- Start of Main -->
<main class="main cart">
    <!-- Start of Breadcrumb -->
    <nav class="breadcrumb-nav">
        <div class="container">
            <ul class="breadcrumb shop-breadcrumb bb-no">
                <li class="active"><a href="/">Shopping Cart</a></li>
                <li><a href="">Checkout</a></li>
                <li><a href="/cart">Order Complete</a></li>
            </ul>
        </div>
    </nav>
    <!-- End of Breadcrumb -->

    <!-- Start of PageContent -->
    <div class="page-content">
        <div class="container">
            <div class="row gutter-lg mb-10" id="table_change">
                <div class="col-lg-8 pr-lg-4 mb-6">
                    <table class="shop-table cart-table">
                        <thead>
                            <tr>
                                <th class="product-name"><span>Product</span></th>
                                <th></th>
                                <th class="product-price"><span>Price</span></th>
                                <th class="product-quantity"><span>Quantity</span></th>
                                <th class="product-subtotal"><span>Subtotal</span></th>
                            </tr>
                        </thead>
                        <tbody>
                            <%for(i=0;i<cart.length;i++){%>
                                <tr id="tr_<%=cart[i].product._id%>">
                                    <td class="product-thumbnail">
                                        <div class="p-relative">
                                            <a href="/viewproduct/<%=cart[i].product._id%>">
                                                <figure>
                                                    <img src="/user/images/productImage/<%=cart[i].product._id%>1.jpg"
                                                        alt="product" width="300" height="338">
                                                </figure>
                                            </a>
                                            <button id="removeProduct" onclick="removeCart('<%=cart[i].product._id%>')"
                                                class="btn btn-close"><i class="fas fa-times"></i></button>
                                        </div>
                                    </td>
                                    <td class="product-name">
                                        <a href="/viewproduct/<%=cart[i].product._id%>">
                                            <%=cart[i].product.producttitle%>
                                        </a>
                                    </td>
                                    <td class="product-price"><span class="amount">RS.<%=cart[i].product.productprice%>
                                        </span></td>
                                    <td class="product-quantity">
                                        <div id="div" class="input-group">
                                            <input class=" form-control" type="number" min=""
                                                id="quantity_<%=cart[i].product._id%>" value="<%=cart[i].quantity%>"
                                                max="100000">
                                            <button
                                                onclick="changeQuantity('<%=cart[i]._id%>','<%=cart[i].product._id%>',1)"
                                                class="quantity-plus w-icon-plus quan_btn"></button>
                                            <button
                                                onclick="changeQuantity('<%=cart[i]._id%>','<%=cart[i].product._id%>',-1)"
                                                id="minus_<%=cart[i].product._id%>"
                                                class="quantity-minus w-icon-minus quan_btn"></button>
                                        </div>
                                    </td>
                                    <td class="product-subtotal">
                                        <span class="amount">RS.<span id="subtotal_<%=cart[i].product._id%>"><%=cart[i].subTotal%></span></span>
                                    </td>
                                </tr>
                                <%}%>
                        </tbody>
                    </table>

                    <div class="cart-action mb-6">
                        <a href="/" class="btn btn-dark btn-rounded btn-icon-left btn-shopping mr-auto"><i
                                class="w-icon-long-arrow-left"></i>Continue Shopping</a>
                        <!-- <button type="submit" class="btn btn-rounded btn-default btn-clear" name="clear_cart"
                            value="Clear Cart">Clear Cart</button>
                        <button type="submit" class="btn btn-rounded btn-update disabled" name="update_cart"
                            value="Update Cart">Update Cart</button> -->
                    </div>

                    <!-- <form class="coupon">
                        <h5 class="title coupon-title font-weight-bold text-uppercase">Coupon Discount</h5>
                        <input type="text" class="form-control mb-4" placeholder="Enter coupon code here..." required />
                        <button class="btn btn-dark btn-outline btn-rounded">Apply Coupon</button>
                    </form> -->
                </div>
                <div class="col-lg-4 sticky-sidebar-wrapper">
                    <div class="sticky-sidebar">
                        <div class="cart-summary mb-4">
                            <h3 class="cart-title text-uppercase">Cart Totals</h3>
                            <div class="cart-subtotal d-flex align-items-center justify-content-between">
                                <!-- <label class="ls-25">Subtotal</label>
                                <span>$100.00</span> -->
                            </div>

                            <hr class="divider">

                            <ul class="shipping-methods mb-2">
                                <li>
                                    <label class="shipping-title text-dark font-weight-bold">Shipping</label>
                                </li>
                                <li>
                                    <div class="pt-2">
                                       
                                        <label for="free-shipping" class="custom-control-label color-dark">Free
                                            Shipping</label>
                                    </div>
                                </li>
                                <li>
                                    <div class="pt-2">
                                        
                                        <label for="local-pickup" class="custom-control-label color-dark">Local
                                            Pickup</label>
                                    </div>
                                </li>
                               
                            </ul>



                            <hr class="divider mb-6">
                            <div class="order-total d-flex justify-content-between align-items-center">
                                <label>Total</label>
                                <span class="ls-50">RS.<span id="total_price"><%=total%></span></span>
                            </div>
                            <a href="/checkout" class="btn btn-block btn-dark btn-icon-right btn-rounded  btn-checkout">
                                Proceed to checkout<i class="w-icon-long-arrow-right"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End of PageContent -->
</main>
<!-- End of Main -->


<!-- Plugin JS File -->
<script src="/user/vendor/jquery/jquery.min.js"></script>
<script src="/user/vendor/sticky/sticky.js"></script>
<script src="/user/vendor/magnific-popup/jquery.magnific-popup.min.js"></script>
<script src="/user/js/main.min.js"></script>


<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>


<script>

    


    function removeCart(productId) {

        Swal.fire({
            title: 'Remove Item',
            text: "Are you sure you want to remove this item?",

            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Remove'
        }).then((result) => {
            if (result.isConfirmed) {

                $.ajax({
                    url: '/removeCartProduct',
                    method: 'post',
                    data: {
                        product: productId
                    },
                    success: () => {

                        Swal.fire({
                            position: 'bottom-center',
                            icon: 'success',
                            title: 'Successfully removed item from your cart',
                            showConfirmButton: false,
                            timer: 1500
                        })
                        $("#table_change").load(location.href + " #table_change");
                    }
                })
            }
        })



    }


    function changeQuantity(cartId, productId, count) {
        let change = $('#tr_' + productId)
        $.ajax({
            url: '/change-product-quantity',
            method: 'post',
            data: {
                cart: cartId,
                product: productId,
                count: count
            },
            success: (response) => {

                let quantity = $('#quantity_' + productId).val()
                console.log(quantity);


                if (count == -1) {
                    quantity = parseInt(quantity) - 1
                } else {
                    quantity = parseInt(quantity) + 1
                }
                if (quantity < 2) {
                    $('#minus_' + productId).attr("disabled", "disabled")
                } else {
                    $('#minus_' + productId).removeAttr("disabled")
                }
                $('#quantity_' + productId).val(quantity)
                $('#total_price').html(response.total)
                $('#subtotal_'+productId).html(response.subTotal)
            }

        })
    }

</script>