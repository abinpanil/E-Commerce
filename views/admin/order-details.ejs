<script>



    function status(id) {

        let status = $(`#status_${id}`).val()
        $.ajax({
            url: '/admin/change-status',
            method: 'post',
            data: {
                orderId: id,
                status: status
            },
            success: () => {
                $("#change").load(location.href + " #change");
                let change = document.getElementById(`status_${id}`).value = status
            }
        })

    }



</script>